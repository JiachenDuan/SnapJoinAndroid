<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/jsonview"
            android:layout_weight="0.31"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST"
            android:id="@+id/button" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get all Users"
            android:id="@+id/GetButton" android:layout_gravity="center_horizontal" android:layout_weight="0.03"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="184dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailText" android:layout_weight="0.31"
                android:layout_centerVertical="true" android:layout_alignEnd="@+id/passwdText"
                android:layout_alignStart="@+id/passwdText"/>
        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwdText"
                android:layout_below="@+id/emailText" android:layout_toRightOf="@+id/passwordtextView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="email:"
                android:id="@+id/emailtextView"
                android:layout_above="@+id/passwdText" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="password:"
                android:id="@+id/passwordtextView"
                android:layout_alignBottom="@+id/passwdText" android:layout_alignParentStart="true"/>

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="logout"

                android:id="@+id/logoutbutton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.31"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:text="login"
                android:id="@+id/loginbutton" android:layout_weight="0.31"/>
    </RelativeLayout>
</LinearLayout>

